" vim: set ft=vim:
let mapleader=","
let maplocalleader=",,"
" vimrc management----------- {{{
nnoremap <leader>ev     :vs $MYVIMRC<CR>
nnoremap <leader>evm    :vs $HOME/.vim_mapping<CR>
nnoremap <leader>sv     :source $MYVIMRC<CR>ZZ
" }}}

" spacebar folding----------- {{{
nnoremap <space>        za
" }}}

" put esc on jk----------- {{{
inoremap jk  <ESC>
inoremap <ESC> <nop>
" }}}

" remap motion----------- {{{
nnoremap H 0
nnoremap L $
nnoremap J G
nnoremap K gg
no <down> <Nop>
no <left> <Nop>
no <right> <Nop>
no <up> <Nop>

ino <down> <Nop>
ino <left> <Nop>
ino <right> <Nop>
ino <up> <Nop>

vno <down> <Nop>
vno <left> <Nop>
vno <right> <Nop>
vno <up> <Nop>
" }}}

" better brackethandling, hacky" ----------- {{{
" multiple keytrokes must be mapped for its own...
"ö
nnoremap ö [
nnoremap öö [[
"Ö
nnoremap Ö {
nnoremap ÖÖ {{
"ä
nnoremap ä ]
nnoremap ää ]]
"Ä
nnoremap Ä }
nnoremap ÄÄ }}
" }}}

" Nerdtree----------- {{{
nnoremap <C-n> :NERDTreeToggle<CR><C-C>
" }}}

" Tagbar----------- {{{
nnoremap <F8> :TagbarToggle<CR>
" }}}

" Buffers ----------- {{{
nnoremap <F9> :bprev<CR>
nnoremap <F10> :bnext<CR>
" }}}

" PYthon----------- {{{
nnoremap <F5>   python3;clear;python3 %s;
imap <F5> <Esc>:w<CR>:!clear;python3 %<CR>
" }}}

" abbreviations, common----------- {{{
iabbrev @@  oliver.schwanke@web.de
