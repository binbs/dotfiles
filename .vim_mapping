" vimrc management----------- {{{
nnoremap <leader>ev     :vs $MYVIMRC<CR>
nnoremap <leader>evm    :vs $HOME/.vim_mapping<CR>
nnoremap <leader>sv     :source $MYVIMRC<CR>ZZ
nnoremap <leader><F3>   :w<CR> :source % <CR>
" }}}

" F5/run mapping----------- {{{
augroup F5_run_mapping
    autocmd!
    autocmd FileType rust nnoremap <F5> :!clear;cargo run;
    autocmd FileType python nnoremap <F5>   python3;clear;python3 %s;
nnoremap <F5>   python3;clear;python3 %s;
" }}}


" spacebar folding----------- {{{
nnoremap <space>        za
" }}}

" put esc on jk----------- {{{
vnoremap jk  <ESC>
vnoremap <ESC> <nop>
inoremap jk  <ESC>
inoremap <ESC> <nop>
" }}}

" remap motion----------- {{{
no <down> <Nop>
no <left> <Nop>
no <right> <Nop>
no <up> <Nop>

ino <down> <Nop>
ino <left> <Nop>
ino <right> <Nop>
ino <up> <Nop>

vno <down> <Nop>
vno <left> <Nop>
vno <right> <Nop>
vno <up> <Nop>
" }}}

