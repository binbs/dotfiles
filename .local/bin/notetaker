#!/bin/sh

noteFile="$(date +%Y-%m-%d)"
noteFilename="$HOME/Meine Dateien/Notes/diary/$noteFile.md"
#noteFilename="$HOME/ownCloud/Notes/diary/$noteFile.md"

if [ ! -f $noteFilename ]; then
    echo "# $noteFile" > $noteFilename
fi

vim \
    -c "norm Go"\
    -c "norm Go## $(date +%H:%M)" \
    -c "norm G2o" \
    -c "norm zz" \
    $noteFilename

